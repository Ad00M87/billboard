<h1><%= @artist.id ? 'Edit Artist' : 'Create Artist' %></h1>
<hr>
<%= form_for @artist do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br>
  <%= f.label :from %>
  <%= f.text_field :from, required: true %>
  <br>
  <%= f.label :music_genre %>
  <%= f.text_field :music_genre, required: true %>
  <br>
  <%= f.label :age %>
  <%= f.text_field :age, required: true %>
  <br>
  <%= f.submit %>
<% end %>
