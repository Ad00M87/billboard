<%= render 'layouts/application' %>

<div class="container">
<h1><%= @artist.id ? 'Edit Artist' : 'Create Artist' %></h1>
<hr>
    <div class="row">
    <%= form_for @artist do |f| %>
      <div class="col s6 input-field">
        <%= f.label :name %>
        <%= f.text_field :name, required: true, autofocus: true %>
      </div>
      <div class="col s6 input-field">
        <%= f.label :from %>
        <%= f.text_field :from, required: true %>
      </div>
    </div>

    <div class="row">
      <div class="col s6 input-field">
        <%= f.label :music_genre %>
        <%= f.text_field :music_genre, required: true %>
      </div>
      <div class="col s6 input-field">
        <%= f.label :age %>
        <%= f.text_field :age, required: true %>
      </div>
    </div>

    <div class="row">
      <div class="col s6 input-field waves-effect waves-light btn #00695c teal darken-3">
        <%= f.submit %>
      </div>
    </div>
    <% end %>
  </div>
