<%= render 'layouts/application' %>

<div class="container">
  <h1><%= @billboard_chart.id ? 'Edit Billboard' : 'Create Billboard' %></h1>
  <hr>
  <div class="row">
    <div class="input-field">
          <%= form_for @billboard_chart do |f| %>
        <div class="col s6">
          <%= f.label :name %>
          <%= f.text_field :name, required: true, autofocus: true %>
        </div>
        <div class="col s6 waves-effect waves-light btn #00695c teal darken-3">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
